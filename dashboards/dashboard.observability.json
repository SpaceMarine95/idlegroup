{
  "uid": "obs-main",
  "title": "Observability – Logs (Suricata / Nginx / Cowrie)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-6h", "to": "now" },
  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki-ds" },
        "refresh": 1,
        "query": "label_values({job=~\".+\"}, job)",
        "sort": 1,
        "current": { "text": "All", "value": "", "selected": true },
        "includeAll": true,
        "multi": true
      },
      {
        "name": "status_class",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki-ds" },
        "refresh": 1,
        "query": "label_values({job=\"nginx\"}, status_class)",
        "hide": 0,
        "sort": 1,
        "current": { "text": "All", "value": "", "selected": true },
        "includeAll": true,
        "multi": true
      },
      {
        "name": "eventid",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki-ds" },
        "refresh": 1,
        "query": "label_values({job=\"cowrie\"}, eventid)",
        "hide": 0,
        "sort": 1,
        "current": { "text": "All", "value": "", "selected": true },
        "includeAll": true,
        "multi": true
      },
      {
        "name": "sensor",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki-ds" },
        "refresh": 1,
        "query": "label_values({job=\"cowrie\"}, sensor)",
        "hide": 0,
        "sort": 1,
        "current": { "text": "All", "value": "", "selected": true },
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Total log lines",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\"$job\"}[5m]))",
          "datasource": { "type": "loki", "uid": "loki-ds" },
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "" } }
    },
    {
      "type": "timeseries",
      "title": "Suricata alerts/min",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        {
          "expr": "sum by (sid)(rate(({job=\"suricata\", event_type=\"alert\"}[1m])))",
          "legendFormat": "SID {{sid}}",
          "datasource": { "type": "loki", "uid": "loki-ds" },
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Recent Suricata alerts",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "options": { "showHeader": true },
      "targets": [
        {
          "expr": "{job=\"suricata\", event_type=\"alert\"} | json | line_format 'sid={{.sid}} {{.signature}} {{.src_ip}} -> {{.dest_ip}}:{{.dest_port}}'",
          "datasource": { "type": "loki", "uid": "loki-ds" },
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Nginx 5xx rate",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (status_class)(rate(({job=\"nginx\", status_class=~\"$status_class\"} | json | status =~ \"5..\")[1m]))",
          "legendFormat": "{{status_class}}xx",
          "datasource": { "type": "loki", "uid": "loki-ds" },
          "refId": "A"
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "Cowrie top source IPs (1h)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, count_over_time(({job=\"cowrie\", eventid=~\"$eventid\", sensor=~\"$sensor\"} | json | line_format '{{.src_ip}}')[1h]))",
          "datasource": { "type": "loki", "uid": "loki-ds" },
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Explore – Selected jobs",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 10 },
      "targets": [
        {
          "expr": "{job=~\"$job\"}",
          "datasource": { "type": "loki", "uid": "loki-ds" },
          "refId": "A"
        }
      ],
      "options": { "showLabels": true, "showTime": true }
    }
  ]
}